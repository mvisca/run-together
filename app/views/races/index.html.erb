<div class="container page-container">

  <h1 class>Lista de carreras</h1>

  <div class="row justify-content-md-center races-container-style">

    <% temp = 0 %>

    <% @races.each do |r| %>

      <% if r.public %>
        <% temp += 1 %>
        <% if temp % 8 == 0 %>
        <%= render 'shared/card_marketing' %>
        <% end %>

        <div class="card card-shadow m-2" style="width: 17rem;">

          <%= link_to(image_tag("https://images.unsplash.com/photo-1607962837359-5e7e89f86776?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", alt: "Runners pic", class: "card-img-top"), race_path(r)) %>

          <div class="container mx-auto p-0">

            <div class="card-body">
              <h5 class="card-title"><%= r.name  %></h5>
              <p class="card-text">Info: <%= r.description[0..44] %> <%= "..." if r.description.length > 45 %></p>
              <p class="card-text">Distance: <%= r.length %> km. </p>
              <p class="card-text">Meeting point: <%= r.meet_point  %></p>
              <p class="card-text">Starting time: <%= r.race_datetime.strftime("%d %b of %Y, %H:%M") %></p>
                  <%= link_to "Join the race!", race_path(r), class: "secondary-btn mb-2" %>
            </div>

          </div>
        </div>
      <% end %>
    <% end %>

  </div>

</div>



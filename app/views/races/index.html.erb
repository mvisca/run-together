<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h1 class="text-center">Find a race near you</h1>
    </div>
  </div>

  <div class="row px-4 mt-3">
    <div class="col rt-shadow rt-rounded p-0">
      <div id="map"
        class="rt-shadow rt-rounded"
        style="width: 600; height: 300px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col mt-5 mb-2">
      <h2 class="text-center">Choose a race and join!</h2>
    </div>
  </div>

  <div class="row row-cols-12 row-cols-sm-6 row-cols-md-4 row-cols-xl-3">

    <% temp = 0 %>
    <% @races.each do |race| %>
      <% @race = race %>
      <%= render 'shared/card' %>
      <% temp += 1 %>
      <% if temp % 7 == 0 %>
        <%= render 'shared/marketing' %>
      <% end %>
    <% end %>

  </div>

</div>

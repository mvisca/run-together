<div class="container page-container mx-auto">

  <h2>Lista de carreras</h2>

  <div class="container races-container-style">

    <div class="row justify-content-around px-3 pb-3">
      <% temp = 0 %>
      <% @races.each do |r| %>
        <% if r.public %>
          <% temp += 1 %>
          <% if temp % 8 == 0 %>
            <%= render 'shared/card_marketing' %>
          <% end %>

          <% # RACE-CARD %>

          <div class="card card-shadow mx-3 mt-0 mb-5 pb-3 flex-grow-1" style="width: 17rem;">
            <%= link_to(image_tag("https://images.unsplash.com/photo-1607962837359-5e7e89f86776?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80", alt: "Runners pic", class: "card-img-top", style: "width: 100%;"), race_path(r)) %>

            <div class="container p-0">
              <div class="card-body align-content-betwen">
                <div class="mb-4">
                  <h5 class="card-title"><%= r.name  %></h5>
                  <p class="card-text">Info: <%= r.description[0..44] %> <%= "..." if r.description.length > 45 %></p>
                  <p class="card-text">Distance: <%= r.length %> km. </p>
                  <p class="card-text">Meeting point: <%= r.meet_point  %></p>
                  <p class="card-text">Starting time: <%= r.race_datetime.strftime("%d %b of %Y, %H:%M") %></p>
                </div>
                    <%= link_to "Join this race", race_path(r), class: "secondary-btn mb-2 align-items-end" %>
              </div>
            </div>
          </div>

        <% end %>
        <% # END IF PUBLIC %>
      <% end %>
    </div>

  </div>

</div>



<div class="container">

  <div class="row">
    <div class="col mt-5">
      <h1 class="text-center">Find a race near you</h1>
    </div>
  </div>

</div>

<div class="container-flow">

  <div class="row">
    <div class="col mt-3">
      <div id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        style="height: 450px; width: 100%;">
      </div>
    </div>
  </div>

</div>

<div class="container">

  <div class="row">
    <div class="col mt-5">
      <h2 class="text-center">Choose a race and join!</h2>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 pb-5"">

    <% temp = 0 %>
    <% @races.each do |race| %>
      <% @race = race %>
      <%= render 'shared/race' %>
      <% temp += 1 %>
      <% if temp % 71 == 0 %>
        <%= render 'shared/race_marketing' %>
      <% end %>
    <% end %>

  </div>

</div>


<div class="container page-container">
  <div class="races-container">

    <% # RACE INFO %>

    <div class="d-flex mb-3 card-shadow">
      <div class="card-shadow" style="width: 20rem; background-image: url('https://images.unsplash.com/photo-1607962837359-5e7e89f86776?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80'); background-size: cover; background-position: center;" >

        <div class="p-3 text-center align-items-between" style="background-color: rgba(0, 0, 0, 0.5); height: 100%;">
          <h1 class="card-title white"><%= @race.name %></h1>
          <div class="show-separator"></div>
          <%= link_to "Join this race", race_path(@race), class: "secondary-btn align-items-end" %>
        </div>
      </div>

      <div class="container card">
        <div class="card-body">
          <p class="card-text"><%= @race.description[0..50] %><%= "..." if @race.description.length >=50 %></p>
          <p class="card-text"><strong>Distance: </strong><%= @race.length %> km.</p>
          <p class="card-text"><strong>Where: </strong><%= @race.meet_point  %></p>
          <p class="card-text"><strong>When: </strong><%= @race.start_time.strftime("%d %b of %Y, %H:%M") %></p>
        </div>

        <div>
          <%= link_to "Back", races_path, class: "m-0 button-text-sm align-bottom" %>
          <%= link_to "Edit race", edit_race_path(@race), class: "m-0 button-text-sm align-bottom" %>
          <%= link_to "Delete Race", race_path(@race), method: :delete, class: "m-0 button-text-sm align-bottom", data: {confirm: "Are you sure?"} %>
        </div>

      </div>
    </div>


  <div class="page-container container">
    <div class="races-container">
      <div class="d-flex mb-3">
        <h2 style="margin-right: 8px;">Race details</h2>

        <div>
          <%= link_to "Back", races_path, class: "m-0 button-text-sm align-bottom" %>
          <%= link_to "Edit race", edit_race_path(@race), class: "m-0 button-text-sm align-bottom" %>
          <%= link_to "Delete Race", race_path(@race), method: :delete, class: "m-0 button-text-sm align-bottom", data: {confirm: "Are you sure?"} %>
          </div>
        </div>


      </div>
          <div class="banner text-center" style="background-image: url('https://images.unsplash.com/photo-1607962837359-5e7e89f86776?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80'); background-size: cover; background-position: center;" >
            <div class="px-3 py-5" style="background-color: rgba(0, 0, 0, 0.5);">
              <h1 class="card-title white"><%= @race.name  %></h1>
            </div>
          </div>

        <div class="container card card-shadow">
    <div class="card-body">
      <h5 class="card-title brand-typo s-middle"><%= @race.name  %></h5>
      <p class="card-text"><%= @race.description[0..50] %><%= "..." if @race.description.length >=50 %></p>
      <p class="card-text"><strong>Distance: </strong><%= @race.length %> km.</p>
      <p class="card-text"><strong>Where: </strong><%= @race.meet_point  %></p>
      <p class="card-text"><strong>When: </strong><%= @race.start_time.strftime("%d %b of %Y, %H:%M") %></p>
        <%= link_to "Join this race", race_path(@race), class: "secondary-btn mb-2 align-items-end" %>
          </div>
        </div>
      </div>
    </div>
  </div>


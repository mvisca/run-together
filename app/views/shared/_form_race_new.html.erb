<div class="container page-container">

  <div class="d-flex mb-3">
    <h2 style="margin-right: 8px;">Create race</h2>
    <div>
      <%= link_to "<< Back", request.referer.present? ? request.referer : races_path, class: "m-0 mb-3 button-text-sm align-bottom" %>
      </div>
    </div>
  </div>
  <div class="container races-container-style">
    <div class="row p-3">
      <%= simple_form_for race do |f| %>
        <div class="mb-3">
        <%= f.input :name, class: "col-3" %>
        </div>
        <div class="mb-3"><%= f.input :description, class: "col-3" %></div>
        <div class="mb-3">
          <%= f.input :length, class: 'col-3' %>
        </div>
        <div class="mb-3">
          <%= f.input :meet_point %>
        </div>
        <div class="mb-3">
          <%= f.input :start_time %>
        </div>
        <div class="place-btn">
        <%= f.button :submit, "Create race", class: "main-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-5">
  <div class="container">
    <div class="row justify-content-center">

      <%# HERO CARD CON GRADIENT BACKGROUND %>
      <div class="col col-12 col-lg-8">
        <div class="rt-hero-card rt-shadow rt-rounded bg-light p-4 position-relative">

          <%# GRADIENT OVERLAY BACKGROUND %>
          <div class="rt-hero-gradient rt-rounded"></div>

          <%# HERO CONTENT - AVATAR + USER DATA %>
          <div class="rt-hero-content position-relative">

            <%# SECCIÃ“N AVATAR %>
            <div class="d-flex justify-content-center mb-4">
              <% if @user.photo.attached? %>
                <%= image_tag @user.avatar_url(size: 180),
                  class: 'rt-hero-avatar rt-shadow'
                %>
              <% else %>
                <%= image_tag "logo.png",
                  alt: "RunTogether logo",
                  class: "rt-hero-avatar rt-hero-no-photo rt-shadow"
                %>
              <% end %>
            </div>

            <%# USER NAME %>
            <div class="text-center mb-3">
              <h3 class="rt-hero-name text-dark mb-0">
                <%= @full_name %>
              </h3>
            </div>

            <%# BOTONES EDIT - DEBAJO DEL NOMBRE %>
            <div class="d-flex justify-content-center gap-2 mb-4">
              <%= link_to "Picture",
                users_edit_picture_path,
                class: "btn btn-sm btn-secondary"
              %>
              <%= link_to "Information",
                users_edit_information_path,
                class: "btn btn-sm btn-secondary"
              %>
              <%= link_to "Password",
                users_edit_password_path,
                class: "btn btn-sm btn-secondary"
              %>
            </div>

            <%# SECCIÃ“N ABOUT YOU - INTEGRADA EN HERO %>
            <div class="rt-hero-about">
              <% if @user.intro %>
                <p class="rt-hero-about-text text-dark text-center px-3">
                  <%= @user.intro.about %>
                </p>
                <div class="d-flex justify-content-center mt-3">
                  <%= link_to "Edit intro",
                    edit_intro_path(@user.intro),
                    class: 'btn btn-sm btn-info'
                  %>
                </div>
              <% else %>
                <p class="rt-hero-about-text text-muted text-center fst-italic px-3">
                  Tell something about you. No need to mention you like running! ðŸ˜‰
                </p>
                <div class="d-flex justify-content-center mt-3">
                  <%= link_to "Add an intro",
                    new_intro_path,
                    class: 'btn btn-sm btn-info'
                  %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

    <div class="xontainer">


      <% if @this_race.latitude %>

        <% lat = @this_race.latitude %>
        <% lng = @this_race.longitude %>
        <img src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/<%= "#{lng},#{lat}" %>,14,0/300x200@2x?access_token=pk.eyJ1IjoibWFydGludmlzY2EiLCJhIjoiY2t1Mzc3OTExMnd3YjJvcXRqdG9pODJ0OCJ9.kPIBeutkhWoCwnOcQvLb0Q' class="xontainer-img" />

      <% else %>

        <img src="https://images.unsplash.com/photo-1607962837359-5e7e89f86776" alt="Runners photo" class="xontainer-img">

      <% end %>

      <div class="xontent">
        <h5><%= @this_race.name  %></h5>

        <div class="owner-block">

          <div class="x-owner-intro">
            <p>Created by:</p>
          </div>

          <div class="x-avatar">
            <% user = User.find(@this_race.user_id) %>
            <% if user.photo.key %>

              <%= cl_image_tag user.photo.key, height: 150, width: 150, gravity: :face, crop: :fill, class: 'owner-avatar' %>

            <% else %>

              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "owner-avatar" %>

            <% end %>

          </div>

          <div class="x-owner-intro">
            <p><%= user.name.split[0] %></p>
          </div>

        </div>

        <div class="highlight">

          <article>

            <content data-type="1">
              <p data-font="title">Date</p>
              <p><%= @this_race.start_date.strftime("%d/%m/%Y")%></p>
              <p><%= "#{@this_race.start_date.hour}:#{@this_race.start_date.min.to_s.length > 1 ? @this_race.start_date.min : '0' + @this_race.start_date.min.to_s }" %></p>
            </content>

            <content data-type="2"></content>

            <content data-type="1">
              <p data-font="title">Distance</p>
              <p data-font="staatliches"><%= @this_race.length %> K</p>
            </content>

            <content data-type="2"></content>

            <content data-type="1">
              <p data-font="title">Assistants</p>
              <p data-font="staatliches"><%= Runner.where(race_id: @this_race.id).count() %></p>
            </content>

          </article>

        </div>

        <%= link_to "More info", race_path(@this_race), class: "" %>

      </div>
    </div>


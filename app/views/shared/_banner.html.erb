<div class="rt-banner">
  <div class="d-flex flex-column justify-content-center text-center h-100">

      <!-- TITLES -->
      <div class="mt-2 mt-md-3 pb-3">
        <h1 class="rt-font-brand rt-font-big text-light col-10 col-md-8 mx-auto">
          Make new friends <br> while you run
        </h1>
        <p class="rt-font-small text-light col-10 col-md-8 mx-auto">
          Boost your energy and motivation,<br>trainning with other runners in your neighbourhood!
        </p>
      </div>

      <!-- BUTTONS -->
      <div class="my-0 my-md-3">
        <div>
          <%= link_to "New race", new_race_path, class: "btn rt-btn rt-font-brand col-5 col-md-3 col-lg-2 mb-4" %>
        </div>
        <div>
          <%= link_to "Find a race", races_path, class: "btn rt-btn rt-font-brand col-5 col-md-3 col-lg-2 my-2" %>
        </div>
      </div>

      <!-- OPTIONAL LOGIN  -->
      <% unless user_signed_in? %>
        <div class="mb-0 mb-sm-3 mb-md-4 py-3">
          <div class="col col-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 mx-auto">
            <div class="rt-banner-line"></div>
          </div>
          <p class="rt-font-small text-light">Already have an account?</p>
          <%= link_to "Login", new_user_session_path, class: "rt-font-small rt-banner-link" %>
        </div>
      <% end %>
    </div>

  </div>
</div>


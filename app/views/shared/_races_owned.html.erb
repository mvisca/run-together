<div class="d-flex mb-3 card-shadow">
  <div style="width: 20rem; background-image: url('https://images.unsplash.com/photo-1607962837359-5e7e89f86776?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80'); background-size: cover; background-position: center;" >

    <div class="p-3 text-center align-items-between" style="background-color: rgba(0, 0, 0, 0.5); height: 100%;">
      <h1 class="card-title white"><%= @this_race.name %></h1>
      <div class="show-spacer"></div>
      <%= link_to "More info", race_path(@this_race), class: "secondary-btn align-items-end" %>
      <div class="show-spacer"></div>
    <div>
      <%= link_to "Edit", edit_race_path(@this_race), class: "m-0 button-text-sm-sl align-bottom" %>
      <%= link_to "Delete", race_path(@this_race), method: :delete, class: "m-0 button-text-sm-sl align-bottom", data: {confirm: "Are you sure?"} %>
    </div>
    </div>
  </div>

  <div class="container">
    <div class="card-body">
      <p class="card-text"><%= @this_race.description[0..50] %><%= "..." if @this_race.description.length >=50 %></p>
      <p class="card-text"><strong>Distance: </strong><%= @this_race.length %> km.</p>
      <p class="card-text"><strong>Where: </strong><%= @this_race.meet_point  %></p>
      <p class="card-text"><strong>When: </strong><%= @this_race.start_time.strftime("%d %b of %Y, %H:%M") %></p>
      <p class="card-text"><strong>Assistants: </strong>NUMBER</p>
      <p class="card-text"><strong>Messages: </strong>NUMBER</p>
    </div>
  </div>
</div>

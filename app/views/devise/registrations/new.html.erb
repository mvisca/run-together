<div class="rt-banner">
  <div class="d-flex flex-column justify-content-center text-center h-100">

    <div> <%# START TITLE  %>
      <h1 class="text-light col-10 col-md-8 mx-auto mb-3">
        Create an account
      </h1>
    </div> <%# END TITLE  %>

    <div class="container"> <%# START SIGN UP FORM %>
      <div class="row justify-content-center">
        <div class="col col-11 col-sm-10 col-md-8 col-lg-6 col-xl-4">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-control rt-devise-border-0 rt-devise-bg-0 p-0 m-0">
            <div class="rt-devise-form-bg rt-dvise-border rt-rounded py-4 px-3 text-start text-light">
              <%= f.error_notification %>

              <div class="form-inputs"><%# START FORM INPUTS %>

                <div class="mb-3">
                  <%= f.input :name, required: true, autofocus: true, hint: ("25 characters max"), input_html: { autocomplete: "name" }%>
                </div>

                <div class="mb-3">
                  <%= f.input :email, required: true, input_html: { autocomplete: "email" }%>
                </div>

                <div class="mb-3">
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" } %>
                </div>

                <%# >> SKIPED >> %>
                <%# START SKIP PASSWORD CONFIRMATION %>
                <% if false %>
                  <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
                <% end %>
                <%# END SKIP PASSWORD CONFIRMATION %>

                <div class="mb-3 form-control" ><%# PHOTO %>
                  <%= f.input :photo, as: :file, label: 'Click here to add a profile picture', input_html: { multiple: false, data: { '': 'input', action: ""}, class: "d-none" } %>
                </div>

              </div><%# END FORM INPUTS %>

              <div class="form-actions text-center">
                <%= f.button :submit, "Sign up", class: "btn rt-btn rt-font-brand my-3 px-3" %>
                <% end %>
              </div>

              <div class="show-spacer justify-content-center pt-3"></div>

              <%= render "devise/shared/links" %>

            </div>
          </div> <%# END SIGN UP FORM %>


        </div>
      </div>
    </div> <%# END SIGN UP FORM %>

  </div>
</div>


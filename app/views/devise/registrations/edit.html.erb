<div class="rt-banner">
  <div class="d-flex flex-column justify-content-center text-center rt-media-banner py-4">

    <div> <%# START TITLE  %>
      <h1 class="text-light col-10 col-md-8 mx-auto mb-3">
        Edit your profile
      </h1>
    </div> <%# END TITLE  %>

    <div class="container"> <%# START SIGN UP FORM %>
      <div class="row justify-content-center">
        <div class="col col-11 col-sm-10 col-md-8 col-lg-6 col-xl-4">

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="form-control rt-devise-border-0 rt-devise-bg-0 p-0 m-0">
            <div class="rt-devise-form-bg rt-dvise-border rt-rounded py-4 px-3 text-start text-light">
              <%= f.error_notification %>

              <div class="form-inputs"><%# START FORM INPUTS %>

                <div class="mb-3"><%# NAME %>
                  <%= f.input :name,
                  hint: "Leave it blank if you don't want to change it",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "new-password" } %>
                </div>

                <div class="mb-3"><%# EMAIL %>
                  <%= f.input :email, required: true %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>
                </div>

                <% if false %>
                <div class="mb-3"><%# PASSWORD CONFIRM %>
                  <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
                </div>
                <% end %>

                <div class="mb-3 form-control" ><%# PHOTO %>
                  <%= f.input :photo, as: :file, label: 'Click here to add a profile picture', input_html: { multiple: false, data: { '': 'input', action: "" }, class: 'd-none' } %>
                </div>

                <div class="mb-3"><%# PASSWORD %>
                  <%= f.input :password,
                  hint: "Leave it blank if you don't want to change it",
                  label: 'New password',
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
                </div>

                <div>
                  <%= f.input :current_password,
                    hint: "Your current password is required to confirm the changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
                </div>
              </div><%# END FORM INPUTS %>

              <%# SUBMIT %>
              <div class="form-actions text-center my-3">
                <%= f.button :submit,
                  "Update",
                  class: "btn rt-btn rt-font-brand" %>
              </div>

              <% end %>

              <div class="d-flex flex-column text-center">
                <%= link_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure? All your races will be deleted." }, method: :delete, class: 'rt-font-small rt-banner-link-grey rt-font-xsmall' %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container page-container">
  <div class="container races-container-style">
    <div class="row p-3">
      <h2>Edit profile</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <div class="mb-3">
            <%= f.input :name,
                        hint: "Leave it blank if you don't want to change it",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="mb-3">
            <%= f.input :email, required: true %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.input :password,
                        hint: "Leave it blank if you don't want to change it",
                        label: 'New password',
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <% if false %>
            <div class="mb-3">
              <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            </div>
          <% end %>

          <div class="mb-3 form-control" >
            <%= f.input :photo,
              as: :file,
              label: 'Click here to add a profile picture',
              input_html: { multiple: false,
                  data: { '': 'input',
                          action: ""
                        },
                  class: 'd-none'
              } %>
        </div>

          <%= f.input :current_password,
                      hint: "Your current password is required to confirm the changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "rt-btn" %>
      </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>



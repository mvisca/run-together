<div class="container page-container">

    <div class="container races-container-style mb-3">
      <div class="row p-3">
        <h2>Welcome <%= current_user.name.capitalize %> </h2>
        <%= cl_image_tag @current_user.photo.key, height: 400, width: 400, round: 150, gravity: :face, crop: :crop %>
      </div>
    </div>

  <% if @owned_races.any? %>
    <div class="container races-container-style mb-3">
      <div class="row p-3">
        <h2>Tus carreras</h2>
        <% # RACE INFO %>
        <% @owned_races.each do |race| %>
          <% @this_race = race %>
          <%= render 'shared/races_owned' %>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @choice_races.any? %>
    <div class="container races-container-style">
      <div class="row p-3">
        <h2>Tus elegidas</h2>
        <% # RACE INFO %>
        <% @choice_races.each do |race| %>
          <% @this_race = race %>
          <%= render 'shared/races_owned' %>
        <% end %>
      </div>
    </div>
  <% end %>


</div>
